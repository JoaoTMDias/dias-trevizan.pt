      .story-text .quote {
        font-style: italic;
        font-size: 1.25rem;
        color: var(--accent-color);
        border-left: 3px solid var(--gold);
        padding-left: 1rem;
        margin: 1.5rem 0;
        font-family: var(--body-font);
        font-weight: 400;
