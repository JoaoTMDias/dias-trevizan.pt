      .photo-item:hover {
        transform: translateY(-5px);
      }

      .details-section {
        background: var(--light-bg);
      }

      .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
